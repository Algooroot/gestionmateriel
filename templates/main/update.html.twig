{% extends "base.html.twig" %}

{% block body %}
    <div class="container">
        <div class="row">

            <div class="col-md-6 offset-md-3">
                <h3 class="mt-3 text-center">Ajouter l'équipement </h3>

                {{ form_start(form) }}
                <div class="form-group mt-3">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name,{'attr':{'class':'form-control', 'placeholder':'Nom de l\'équipement'}})}}
                </div>
                <div class="form-group">
                    {{ form_label(form.category) }}
                    {{ form_widget(form.category,{'attr':{'class':'form-control', 'placeholder':'Catégorie l\'équipement'}})}}
                </div>
                <div class="form-group">
                    {{ form_label(form.number) }}
                    {{ form_widget(form.number,{'attr':{'class':'form-control', 'placeholder':'Numéro série de l\'équipement'}})}}
                </div>
                <div class="form-group">
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description,{'attr':{'class':'form-control', 'placeholder':'Déscription de l\'équipement'}})}}
                </div>

                <div class="form-group">
                    <button class="btn btn-primary mt-2">Ajouter</button>
                    <a class="btn btn-info mt-2" href="{{ path('app_main') }}">Listes équipement</a>

                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}