{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}
<div class="container">
    <section class="content">

        <div class="box">
            <div class="box-header with-border">
                <h3 class="mt-3 text-center">Listes équipement </h3>
                <a class="btn btn-info mb-4" href="{{ path('create')}}">Ajouter un équipement</a>
            </div>
            <div class="box-body">
                {% for message in app.flashes('notice')  %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                {% endfor %}
                <table id="example" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Catégories</th>
                        <th>Numéros Serie</th>
                        <th>Déscription</th>
                        <th>Date Création</th>
                        <th>Date Modification</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                        {% for data in listeequipement %}
                            <tr>
                                <td>{{ data.name }}</td>
                                <td>{{ data.category }}</td>
                                <td>{{ data.number }}</td>
                                <td>{{ data.description }}</td>
                                <td>{{ data.createdAt|date('d-m-Y H:i:s') }}</td>
                                <td>{{ data.updateAt|date('d-m-Y H:i:s') }}</td>
                                <td>
                                    <div class="btn-group">

                                        <a class="btn btn-warning" href="{{ path('update', {'id':data.id}) }}">Modifier</a>

                                        <a class="btn btn-danger" href="{{ path('delete', {'id':data.id}) }}">Supprimer</a>

                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>

                </table>

            </div>

        </div>

    </section>
</div>
{% endblock %}
